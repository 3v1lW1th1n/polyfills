{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["DOM"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src/",
    "outDir": "lib/",
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "declaration": true,
  "pretty": true
}
